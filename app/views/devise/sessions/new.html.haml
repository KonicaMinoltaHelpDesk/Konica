.container{:style => "border:2px;"}
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .row#home
      .col-sm-6.col-md-4.col-md-offset-4
        %h1.text-center.login-title 
        .account-wall
          
          .form-inputs#form_home{:align => "center" ,style: "margin-top: 50px;"}
            = f.input :email, label:"email:",:label => false , required: false, autofocus: true, class: "form-control", placeholder: "Email"
            = f.input :password, required: false, class: "form-control", placeholder: "Password",:label => false
            %br
            = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
    %br        
    = f.button :submit, "Connexion" , class: "btn btn-lg btn-primary btn-block"
    %br
