<div class="container" style="border:2px;">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<h1 class="text-center login-title">Connexion</h1></br>
				<div class="account-wall">
					<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					  <div class="form-inputs" align="center">
					    <%= f.input :email, label:"email:",:label => false , required: false, autofocus: true, class: "form-control", placeholder: "Email ou pseudo" %>
					    <%= f.input :password, required: false, class: "form-control", placeholder: "Password",:label => false %>
					    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
							<%= f.button :submit, "Connexion" , class: "btn btn-lg btn-primary btn-block"%>     
					  </div>
					<% end %>
				</div>
		</div>
	</div>
</div>





<%= render "devise/shared/links" %>








<!-- Button trigger modal -->
<button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal">
  pop-up inscription
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title " id="myModalLabel" align="center"><b>Formulaire Inscription</b></h4>
      </div>
      <div class="modal-body">
        

            
      <h2 align="center">Inscription</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs" align="center">
    <table style="border: none; border-collapse: collapse; ">
      <tr style="margin-top: 10px;">
        <td>
          <%= f.label "email : *" %>
        </td>
        <td>
          <%= f.input :email, required: true, autofocus: true,label: false %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label "Mot de passe : *" %>
          <%= f.hint "#{@minimum_password_length} characters minimum" if @validatable %>
        </td>
        <td>
          <%= f.input :password, required: true, label: false  %>
          
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label "Confirmer Mot de passe : *" %>
        </td>
        <td>
          <%= f.input :password_confirmation, required: true, label: false %>
        </td>
      </tr> 
       <tr>
        <td>
          <%= f.label "Nom : *" %>
        </td>
        <td>
          <%= f.input :last_name, required: true, label: false %>
        </td>
      </tr> 
       <tr>
        <td>
          <%= f.label "Prenom : *" %>
        </td>
        <td>
          <%= f.input :first_name, required: true, label: false %>
        </td>
      </tr> 
       <tr>
        <td>
          <%= f.label "Login : *" %>
        </td>
        <td>
          <%= f.input :login, required: true, label: false %>
        </td>
      </tr> 
    </table>  
  </div>
    </br>
          





      <div class="modal-footer" align="center">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        
        <%= f.button :submit, "Inscription" , class: "btn btn-primary "%>
      </div>
      <% end %>
    </div>
  </div>
</div>



