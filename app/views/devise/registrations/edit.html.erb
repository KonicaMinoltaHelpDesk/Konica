<h2 align="center"> <b> <u> Modifier Profil : </u></b></h2>
</br></br>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

<div class="form-inputs">
  <table align="center" style="border:none;">
    <tr>
      <td> <%= f.label "Email : " , required: true %> </td>
      <td><%= f.input :email, required: true, autofocus: true, label: false %></td>
    </tr>
    <tr>
      <td> <%= f.label "Login : " , required: true %> </td></td>
      <td> <%= f.input :login, required: true, label: false %> </td>
    </tr>
    <tr>
      <td><%= f.label "Nom : " , required: true %></td>
      <td> <%= f.input :last_name, required: true, label: false %></td>
    </tr>
    <tr>
      <td><%= f.label "Prenom : " , required: true %></td>
      <td><%= f.input :first_name, required: true, label: false %></td>
    </tr>
    <tr>
      <td><%= f.label "Statut : " %></td>
      <td>  <%= f.collection_select :role, User::ROLES, :to_s, :humanize %></td>
    </tr>
  </table>
    </br></br>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

    <h4> Changer <b>Mot de passe :</b> </h4>
  <table align="center" style="border:none;">
    <tr>
      <td><%= f.label "Mot de passe actuel : "  %></td>
      <td><%= f.input :current_password, required: false, label: false %></td>
    </tr>
    <tr>
      <td><%= f.label "Nouveau mot de passe : " %></td>
      <td><%= f.input :password, autocomplete: "off", required: false, label: false %></td>
    </tr>
    <tr>
      <td><%= f.label "Confirmer Mot de passe : " %></td>
      <td><%= f.input :password_confirmation, required: false, label: false %></td>
    </tr>
  </table>
</div>

<div class="form-actions" align="center">
</br></br></br>
  <%= f.button :submit, "Modifier" , class: "btn btn-lg btn-primary "%>
</div>



<% end %>

