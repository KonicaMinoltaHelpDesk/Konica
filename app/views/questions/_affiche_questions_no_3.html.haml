- if @@question_next_no.question_yes == true
  - if @@question_next_no.id != @question_first.id
    //Affiche le YES
    - if !@@arr.include?(@@question_next_no.id)
      %br
      %span{style: "margin-left: "+@@margin.to_s+"px;"}
        = label_tag "YES :"
      - if @question.id == @@question_next_no.id
        %b
          %u= @@question_next_no.title_question
      - else
        = @@question_next_no.title_question
        - if !@@question_next_no.id_route_no?
          |
          = link_to 'supprimer', delete_decision_tree_question_path(@decision_tree,@@question_next_no.id), style: "color:red;"
