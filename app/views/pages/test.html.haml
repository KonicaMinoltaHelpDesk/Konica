              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Page 1
                %span.caret
              %ul.dropdown-menu
                %li
                  %a{:href => "#"} Page 1-1
                %li
                  %a{:href => "#"} Page 1-2
                %li
                  %a{:href => "#"} Page 1-3
            %li
              %a{:href => "#"} Page 2
            %li
              %a{:href => "#"} Page 3
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href => "#"}
                %span.glyphicon.glyphicon-user
                Sign Up
            = succeed "http://www.w3schools.com/tags/tag_select.asp" do
              %li
                %a{:href => "#"}
                  %span.glyphicon.glyphicon-log-in
