%h1{:align => "center"} Ajouter Imprimante
.CSSTableGenerator
  = simple_form_for @printer do |f|
    %table
      %tr
        %td Code Imprimante :
        %td Description Imprimante :
        %td img
        %td Valider
      %tr
        %td.info
          .col-lg-9
            .input-group
              = f.input :code_printers , :input_html => { :style => "width:250px" }, label: false
            / /.col-lg-6
          / /.row
        %td
          .col-lg-9
            .input-group
              = f.text_area :description_printers , :cols => 70, :rows => 4
            / /.col-lg-6
          / /.row
        %td
          = f.file_field :img
        %td
          %span.input-group-btn
            = f.button :submit, class: "btn btn-primary", value:'Valider'
            - if flash[:alert]
              #alert.alert-danger{:role => "alert"}
                = flash[:alert]
                %br/
          #notice.alert-success{:role => "alert"}
            = flash[:notice]
            %br/
%br/
%br/
