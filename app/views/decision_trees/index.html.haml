%table{:align => "center", :style => "width: 100%; border:none;"}
  %thead
    %tr
      %td{:align => "center"}
        %b ID
      %td{:align => "center"}
        %b Titre
      %td{:align => "center"}
        %b Nombre Questions
      
      - if current_user.is? :ADMIN
        %td{:align => "center"}
          %b Supprimer
           
  %tbody
    - @decision_trees.each do |decision_tree|
     
      %tr
        %td{:align => "center"}
          = link_to decision_tree.id, new_decision_tree_question_path(decision_tree)
        %td{:align => "center"}
          = link_to decision_tree.title_decision_tree, new_decision_tree_question_path(decision_tree)
        %td{:align => "center"}
          = link_to decision_tree.questions.count, new_decision_tree_question_path(decision_tree)
        
        - if current_user.is? :ADMIN

          %td{:align => "center"}
